%----------------------------------------------------------
% Package configuration 
%----------------------------------------------------------

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{rho-class/rhoenvs}[24/02/2026 Rhoenvs LaTeX2e package]

%----------------------------------------------------------
% Environment definition style 
%----------------------------------------------------------

\mdfdefinestyle{rhoenvstyle}{
    backgroundcolor=rhocolor!13,
    linecolor=rhocolor,
    leftline=false,
    rightline=false,
    topline=false,
    bottomline=false,
    frametitlerule=true,
    frametitlerulewidth=0.2pt,
    frametitlefont=\color{rhocolor}\bfseries\sffamily,
    frametitlealignment=\raggedright,
    innertopmargin=6pt,
    innerbottommargin=6pt,
    innerleftmargin=6pt,
    innerrightmargin=6pt,
    font=\sffamily\small,
    fontcolor=rhocolor,
    frametitleaboveskip=4pt,
    frametitlebelowskip=4pt,
    skipabove=9pt,
    roundcorner=3pt
}

%----------------------------------------------------------
% Rhoenv-, Info-, Note- environments
%----------------------------------------------------------

% Rhoenv
\newmdenv[style=rhoenvstyle]{rhoenv}

%----------------------------------------------------------

% Info
\newmdenv[style=rhoenvstyle, frametitle=\infolanguage]{info}

%----------------------------------------------------------

% Note
\newmdenv[style=rhoenvstyle, frametitle=\notelanguage]{note}

